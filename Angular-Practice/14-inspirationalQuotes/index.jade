doctype html
html(ng-app='quotes')
  head
    title js18 inspirations Quotes
    link(rel='stylesheet', href='style.css')
    //- link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
    link(rel="stylesheet", type="text/css", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css")

    script(type="application/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js",)
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-animate.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-aria.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/ngStorage/0.3.9/ngStorage.min.js')

  body(ng-controller='quotesCtrl')

    .formWrapper(ng-show="showQuoteForm",)
      .formBox
        input(placeholder='Author', ng-model='author')
        input(placeholder='Rating', ng-model='rating')
        textarea(placeholder='Quote', ng-model='quote')

        button(ng-click='addQuote()') Submit

    .wrapper.container.row
      .sorting
        img.add(ng-click='showAddQuote()', src='http://wws.kirupa.com/images/add_style.png', alt='')
        button(ng-click='toggleSortByRating()') Sort By rating
        button(ng-click='resetQuotes()') Reset
      .cardContainer.row
        h1.welcome Movie Quotes
        .card.col-md-3(ng-repeat='quote in $storage.quotes | filter: selectedAuthor | orderBy: sortRating ')
          .author(ng-click='clickAuthor($index)')
            button(ng-click='goback()', ng-show='showGoBack') hello
            img.delete(src='http://www.iconarchive.com/download/i51281/awicons/vista-artistic/delete.ico', alt='', ng-click='deleteQuote($index)')
            //- button(ng-click='setAuthor()') back
            a(href='#') {{quote.author}}
          .quote
            span “	
            cite {{quote.quote}}
            span ”
          .rating {{quote.stars.join('')}}
          select( ng-model="quote.rating", ng-click="stars()")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
          .rating {{quote.rating}}
 
    script(type='text/javascript', src='main.js')